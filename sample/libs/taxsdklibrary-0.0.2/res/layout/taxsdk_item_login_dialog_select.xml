<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@drawable/taxsdk_shape_rectangle_white_gray"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/taxsdk_certificates_type"
            android:textColor="@color/TaxSdkColor_Black"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TaxSdkColor_null"
            android:drawableRight="@mipmap/taxsdk_icon_arrow_bottom"
            android:gravity="center_vertical"
            android:textColor="@color/TaxSdkColor_aeaeae"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>