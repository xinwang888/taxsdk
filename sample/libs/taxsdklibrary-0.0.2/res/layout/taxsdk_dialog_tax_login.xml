<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/taxsdk_icon_close" />


    <TextView
        android:id="@+id/tv_yzm_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="请输入验证码"
        android:textColor="@color/TaxSdkColor_Black"
        android:textSize="16sp" />


    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_yzm_tip"
        android:layout_marginTop="14dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tv_form_tip_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_input"
        android:gravity="center"
        android:textColor="@color/TaxSdkColor_Black"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_form_tip_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/taxsdk_btn_find_selector"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</RelativeLayout>