<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/TaxSdkColor_Line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="80dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/TaxSdkColor_Black"
            tools:text="@string/taxsdk_account" />

        <EditText
            android:id="@+id/editText_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/TaxSdkColor_null"
            android:singleLine="true"
            android:textColorHint="@color/TaxSdkColor_aeaeae"
            android:textSize="15sp"
            tools:hint="@string/taxsdk_user_phone_email" />
    </LinearLayout>
</LinearLayout>