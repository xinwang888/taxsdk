<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="当前定位"
        android:textColor="@color/TaxSdkColor_Primary"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/TaxSdkColor_Line" />

    <TextView
        android:id="@+id/tv_located_city"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/TaxSdkColor_Black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/TaxSdkColor_Background" />

    <TextView
        android:id="@+id/tv_item_city_listview_letter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="已开通城市"
        android:textColor="@color/TaxSdkColor_Primary"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/TaxSdkColor_Line" />
</LinearLayout>