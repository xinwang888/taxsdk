<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.igeshui.sdk.tax.view.SlideTouchView.SlideTouchView
        android:id="@+id/mSlideTouchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- 下层布局 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <View
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#cfcfcf" />

            <TextView
                android:id="@+id/tv_del"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/taxsdk_icon_del"
                android:gravity="center"
                android:text="删除"
                android:textColor="#fff" />

        </FrameLayout>
        <!-- 上层布局 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:background="#fff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"><!-- 这里设个背景颜色将下层布局遮掩 -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:text="周结论"
                android:textColor="@color/TaxSdkColor_Black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tv_name"
                android:layout_toRightOf="@+id/tv_name"
                android:drawableLeft="@mipmap/taxsdk_icon_location"
                android:drawablePadding="7dp"
                android:gravity="center_vertical"
                android:text="上海市"
                android:textColor="@color/TaxSdkColor_Gray_999999"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_below="@id/tv_name"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="纳税总额"
                        android:textColor="@color/TaxSdkColor_Black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="769.21元"
                        android:textColor="@color/TaxSdkColor_Black"
                        android:textSize="21sp" />

                </FrameLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/TaxSdkColor_Line" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="16dp"
                    android:paddingLeft="34dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:text="缴纳状态：正常"
                        android:textColor="@color/TaxSdkColor_Black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_updata_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="更新时间：2017.11.06"
                        android:textColor="@color/TaxSdkColor_Black"
                        android:textSize="13sp" />

                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/tv_name"
                android:background="@color/TaxSdkColor_Line" />
        </RelativeLayout>
    </com.igeshui.sdk.tax.view.SlideTouchView.SlideTouchView>
</LinearLayout>